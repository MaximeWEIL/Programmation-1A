#include <stdio.h>

main()
{
	int i = 0, nombre = 0, resultat = 1;

	printf("Choisissez votre nombre : \n");
	scanf("%d", &nombre);

	if (nombre == 0)
	{
		printf("La factorielle de %d est %d", nombre, resultat);
	}

	for (i=nombre
 ; i > 0 ; i--)
	{
		resultat = resultat * i;
	}
	
	printf("Le resultat pour %d est %d\n", nombre, resultat);
}
