#include <stdio.h>

main ()
{
	int jour, mois, annee, nombre;

	printf("Quelle est la date d'aujourd'hui ? : ");
	scanf("%d %d %d", &jour, &mois, &annee);
	switch(mois)
	{
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12: nombre = 31;
			break;

		case 4:
		case 6:
		case 11 : nombre = 30;
			break;
		case 2:if(annee%4==0 && annee%100 != 0 || annee%400 == 0) nombre = 29;
			else nombre = 28;
			break;

	}
	if (jour == nombre)
	{
		if (mois==12)
		{
			jour = 1;
			mois = 1;
			annee++;
		}
		else
		{
			jour = 1;
			mois++;
		}
	}
	else jour++;

	if (jour > nombre || mois > 12) printf("nop");
	else printf("Demain nous serons le : %d %d %d\n", jour, mois, annee);
 
	return 0;
}
